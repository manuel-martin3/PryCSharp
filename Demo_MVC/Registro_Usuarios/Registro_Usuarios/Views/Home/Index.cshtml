@model Registro_Usuarios.Models.userLogin

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="container">
    <div class="card card-container" >
        <h2 class="titleLogin">Iniciar sesi&oacute;n</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger"})
        @using (Html.BeginForm("Usuarios", "Home", FormMethod.Post, new { @class = "form-singin" })) 
        { 
            <div>
                @Html.TextBoxFor(dl => dl.email, new { @class = "form-control", @placeholder = "Email"})
                @Html.ValidationMessageFor(dl => dl.email, "", new { @class = "text-danger" })
            </div>    
            <br />
            <div>
                @Html.PasswordFor(dl => dl.password, new { @class = "form-control", @placeholder = "Password"})
                @Html.ValidationMessageFor(dl => dl.password, "", new { @class = "text-danger" })
            </div> 
            <br />
            <input type="submit" value="Enviar" class="btn btn-singin" />
        }
    </div>
</div>


