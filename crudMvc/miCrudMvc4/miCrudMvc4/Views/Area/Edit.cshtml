@model miCrudMvc4.Models.area

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Registros</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>area</legend>

        @Html.HiddenFor(model => model.are_cod)

        <div class="editor-label">
            @Html.LabelFor(model => model.are_des)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.are_des)
            @Html.ValidationMessageFor(model => model.are_des)
        </div>

        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Ir a Lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
