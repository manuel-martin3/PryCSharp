@model IEnumerable<miCrudMvc4.Models.area>

@{
    ViewBag.Title = "Index";
}

<h2>Listado de Areas</h2>

<p>
    @Html.ActionLink("Agregar Nuevo", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.are_des)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.are_des)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.are_cod }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.are_cod }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.are_cod })
        </td>
    </tr>
}

</table>
